source "https://rubygems.org"
gem "jekyll" # Ou la version supportée par GitHub Pages

group: :jekyll_plugins do
    gem "jekyll-seo-tag" # Pour un meilleur SEO
    gem "jekyll-sitemap" # Pour générer un sitemap
    gem "jekyll-feed" # Pour le flux RSS
    gem "jekyll-archives" # Pour les archives
    gem "jekyll-paginate-v2" # Pour la pagination
    gem "jekyll-redirect-from" # Pour les redirections
    gem "jekyll-assets" # Pour la gestion des assets
end


gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]

